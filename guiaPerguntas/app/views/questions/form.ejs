<%- include ('../partials/headers') %>
<body>
  <%- include ('../partials/nav') %>
  <div class="container">
    <div class="card">
      <div class="card-header">
        <h3 id="questionForm">Ask the question</h3>
      </div>
      <div class="card-body">
        <form action="/save" method="post">
          <label for="">Title</label>
          <input name="title" type="text" placeholder="Title" class="form-control">

          <label for="">Description</label>
          <textarea name="description" placeholder="Describe your question here!" class="form-control" rows="10"></textarea>

          <button type="submit" class="btn btn-dark">To ask</button>

        </form>
      </div>

    </div>
  </div>
</body>
